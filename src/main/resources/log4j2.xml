<?xml version="1.0" encoding="UTF-8"?>
<configuration status="info">
    <appenders>
        <!-- 控制台附加器 -->
        <console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] - %l - %m%n"/>
        </console>

        <!-- 设置日志格式并配置日志压缩格式(eg: info-2017-02-12.log.gz) -->
        <RollingFile name="RollingFileInfo" fileName="log/system_info.log"
                     filePattern="log/$${date:yyyy-MM}/info-%d{yyyy-MM-dd}.log.gz">
            <Filters>
                <ThresholdFilter level="INFO"/>
                <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
        </RollingFile>

        <RollingFile name="RollingFileError" fileName="logs/system_error.log"
                     filePattern="log/$${date:yyyy-MM}/error-%d{yyyy-MM-dd}.log.gz">
            <ThresholdFilter level="ERROR"/>
            <PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss:SSS}] [%p] - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="20 MB"/>
            </Policies>
        </RollingFile>
    </appenders>

    <loggers>
        <!-- 默认logger -->
        <root level="info">
            <appender-ref ref="Console"/>
            <appender-ref ref="RollingFileInfo"/>
            <appender-ref ref="RollingFileError" />
        </root>
    </loggers>

    <appenders>
        <!-- SQL相关附加器 -->
        <Console name="sqlPrint" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
    </appenders>

    <loggers>
        <!-- SQL附加器logger -->
        <logger name="org.tmhi.dao" level="DEBUG" additivity="false">
            <appender-ref ref="sqlPrint"/>
        </logger>

        <root level="DEBUG">
            <appender-ref ref="sqlPrint" />
        </root>
    </loggers>

</configuration>